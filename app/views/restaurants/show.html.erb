<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h2 class="display-4"><%= @restaurant.name %></h2>
  <p class="lead"><%= @restaurant.address %></p>
  <hr class="my-4">
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>
  <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
</div>

<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-primary" %>
<%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
<%= link_to 'Leave review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

<hr/>

<h4>Reviews</h4>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= review.content %>
      | <strong>rating:</strong> <%= review.rating %>
      <%= link_to 'Delete!',
                  review_path(review),
                  method: :delete,
                  data: { confirm: 'Are you sure?' }
      %>
    </li>
  <% end %>
</ul>
